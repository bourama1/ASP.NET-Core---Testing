@model WebApplication1.Models.BuggyModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>BuggyModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Routes)
        </dt>
        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Line name</th>
                    <th>Route ID</th>
                </tr>
                @foreach (var item in Model.Routes)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Line.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.RouteID)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.BuggyID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
