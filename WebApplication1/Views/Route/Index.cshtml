@model IEnumerable<WebApplication1.Models.RouteModel>

@{
    ViewData["Title"] = "Routes";
}

<h1>Routes</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["RouteIDParm"]">@Html.DisplayNameFor(model => model.RouteID)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["LineIDParm"]">@Html.DisplayNameFor(model => model.LineID)</a>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["BuggyIDParm"]">@Html.DisplayNameFor(model => model.BuggyID)</a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RouteID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LineID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BuggyID)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RouteID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RouteID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RouteID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
